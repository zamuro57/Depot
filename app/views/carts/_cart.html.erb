<% unless cart.line_items.empty? %>
<h2>Your Cart</h2>
	<table>
 		<%= render(cart.line_items)%>
		<tr class="total_line" >
			<td></td>
		 	<td>Total</td>
		 	<td class="total_cell"  colspan="2"><%= number_to_currency(@cart.total_price) %></td>
		</tr>
 	</table>
<%= button_to 'Checkout', new_order_path, method: :get, class: 'btn primary'%>
<%= button_to 'Empty cart', cart,{:method=>'delete',:confirm =>'Are you sure?',:class=>'btn'} %>
<% end%>
